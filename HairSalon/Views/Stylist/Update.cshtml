@{
    Layout = "_Layout";
}

<a href="/stylist/add">Add New Stylist</a>
<a href="/" type="button" class="btn btn-primary">Return to Home</a>

<a href="/stylist/@Model.stylist.Id/details">@Model.stylist.Name</a>

<form action="/stylist/@Model.stylist.Id/update" method="post">
    <div class="form-group">
        <label for="new-name">Name:</label>
        <input type="text" name="new-name" value="@Model.stylist.Name" required>
    </div>
    <div class="form-group">
        <h6>(Optional) Add New Client To Stylist</h6>
        <select name="newClientId">
            <option value=0>None</option>
            @foreach (var client in Model.GetAllClients())
            {
                @if(!(Model.stylist.GetClients().Contains(client)))
                {
                  <option value="@client.Id">@client.Name</option>
                }
            }
        </select>
    </div>
    <button type="submit">Update</button>
</form>
