@{
    Layout = "_Layout";
}


<h3></h3><a href="/stylists/@Model.stylist.Id/details">@Model.stylist.Name</a></h3>

<form action="/stylist/@Model.stylist.Id/update" method="post">
    <div class="form-group">
        <label for="new-name">Name:</label>
        <input type="text" name="new-name" value="@Model.stylist.Name" required>
    </div>
    <div class="form-group">
        <h6>Add New Client To Stylist (Optional)</h6>
        <select name="newClientId">
            <option value=0>None</option>
            @foreach (var client in Model.GetAllClients())
            {
            @if (!(Model.stylist.GetClients().Contains(client)))
            {
            <option value="@client.Id">@client.Name</option>
            }
            }
        </select>
    </div>
    <div class="form-group">
        <h6>(Optional) Add New Specialty To Stylist</h6>
        <select name="newSpecialtyId">
            <option value=0>None</option>
            @foreach (var specialty in Model.GetAllSpecialties())
            {
            @if(!(Model.stylist.GetSpecialties().Contains(specialty)))
            {
            <option value="@specialty.Id">@specialty.Name</option>
            }
            }
        </select>
    </div>
    <button type="submit">Update</button>
</form>
