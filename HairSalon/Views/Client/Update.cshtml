@{
    Layout = "_Layout";
}

<div>
    <h1><a href="/stylists">Stylists</a> | Clients</h1>
    <a href="/client/@Model.Id/details">@Model.Name</a>
    <form action="/client/@Model.Id/update" method="post">
        <div class="form-group">
            <label for="new-name">Name:</label>
            <input type="text" name="new-name" value="@Model.Name" required>
        </div>
        <div class="form-group">
            <p>Preferred Stylist</p>
            <select name="newStylistId">
                <option value=0>None</option>
                @foreach (var stylist in Model.GetAllStylists())
                {
                    @if (!(Model.GetStylists().Contains(stylist)))
                    {
                        <option value="@stylist.Id">@stylist.Name</option>
                    }
                }
            </select>
        </div>
        <button type="submit">Update</button>
    </form>
</div>
